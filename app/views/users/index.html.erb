<div class="main_users">
    <%# ハンバーガーメニュー %>
    <div class="hamburger">
        <input id="hamburger_menu" type="checkbox" />
        <label for="hamburger_menu" class="open"><img class="hamburger_icon" src="/icon/hamburger_icon2.png"></label>

        <%# ハンバーガーメニューの中身 %>
        <aside>
            <div class="hamburger_nav">
                <label for="hamburger_menu" class="close"><img class="hamburger_icon" src="/icon/hamburger_close_icon.png"></label>

                <nav class="hamburger_menu">
                    <h2 class="menu_title">メニュー</h2>
                    <% if @current_user %>
                        <li>
                            <%= link_to("ログアウト", "/logout", {method: :post})%>
                        </li>
                        <li>
                            <%= link_to( "ペットマップ", "/maps") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップとは", "/maps/about") %>
                        </li>
                        <li>
                            <%= link_to( "提案,意見する", "/posts/index") %>
                        </li>
                    <% else %>
                        <li>
                            <%= link_to( "ログイン", "/login") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップ", "/maps") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップとは", "/maps/about") %>
                        </li>
                    <% end %>
                </nav>
            </div>
        </aside>
    </div>

    <%# サイドメニュー %>
    <div class="maps_menu">
        <h2 class="menu_title">メニュー</h2>
        <li>
            <img src="/icon/mypage.png" class="logout_img">
            <%= link_to("ログアウト", "/logout", {method: :post})%>
        </li>
        <li>
            <%= link_to image_tag("/icon/map.png"), "/maps" %>
            <%= link_to( "ペットマップ", "/maps") %>
        </li>
        <li>
            <%= link_to image_tag("/icon/map.png"), "/maps/about" %>
            <%= link_to( "ペットマップとは", "/maps/about") %>
        </li>
        <li>
            <%= link_to image_tag("/icon/suggestion.png"), "/posts/index" %>
            <%= link_to( "提案,意見する", "/posts/index") %>
        </li>
    </div>

    <%# マイページ %>
    <div class="main_user_index">
        <div class="users_top">
            <h1 class="users_title">マイページ</h1>
            <p class="users_contents">あなたのマイページ<p>
        </div>
        <div class="users_index_item">
            <div class="container">
                <div class="my_user_image">
                    <img src="<%= "/user_images/#{@user.image_name}" %>" class="my_user_image_opp">
                    <p class="user_name">ユーザ名</p>
                    <h2><%= @user.name %></h2>              <%# ユーザ名の表示 %>
                    <p class="user_name">メールアドレス</p>
                    <p><%= @user.email %></p>               <%# メールアドレスの表示 %>
                    <p class="user_name">マイルート</p>
                    <div class="routes">
                        <div class="routes_menu">           <%# ルート1の表示 %>
                            <img src="<%= "/route_images/#{@route1.image_name}" %>" class="routes_menu_image"/>
                            <%= @route1.route_name %>
                        </div>
                        <div class="routes_menu">           <%# ルート2の表示 %>
                            <img src="<%= "/route_images/#{@route2.image_name}" %>" class="routes_menu_image"/>
                            <%= @route2.route_name %>
                        </div>
                        <div class="routes_menu">           <%# ルート3の表示 %>
                            <img src="<%= "/route_images/#{@route3.image_name}" %>" class="routes_menu_image"/>
                            <%= @route3.route_name %>
                        </div>
                    </div>
                    <% if @current_user.id == @user.id %>
                        <div class="edit">
                            <%= link_to("編集", "/users/#{@user.id}/edit") %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main_users">
    <%# ハンバーガーメニュー %>
    <div class="hamburger">
        <input id="hamburger_menu" type="checkbox" />
        <label for="hamburger_menu" class="open"><img class="hamburger_icon" src="/icon/hamburger_icon2.png"></label>

        <%# ハンバーガーメニューの中身 %>
        <aside>
            <div class="hamburger_nav">
                <label for="hamburger_menu" class="close"><img class="hamburger_icon" src="/icon/hamburger_close_icon.png"></label>

                <nav class="hamburger_menu">
                    <h2 class="menu_title">メニュー</h2>
                    <% if @current_user %>
                        <li>
                            <%= link_to( "マイページ", "/users/#{@current_user.id}") %>
                        </li>
                        <li>
                            <%= link_to("ログアウト", "/logout", {method: :post})%>
                        </li>
                        <li>
                            <%= link_to( "ペットマップ", "/maps") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップとは", "/maps/about") %>
                        </li>
                        <li>
                            <%= link_to( "提案,意見する", "/posts/index") %>
                        </li>
                    <% else %>
                        <li>
                            <%= link_to( "ログイン", "/login") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップ", "/maps") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップとは", "/maps/about") %>
                        </li>
                    <% end %>
                </nav>
            </div>
        </aside>
    </div>

    <%# サイドメニュー %>
    <div class="maps_menu">
        <h2 class="menu_title">メニュー</h2>
        <li>
            <%= link_to image_tag("/icon/mypage.png"), "/login" %>
            <%= link_to( "ログイン", "/login") %>
        </li>
        <li>
            <%= link_to image_tag("/icon/map.png"), "/maps" %>
            <%= link_to( "ペットマップ", "/maps") %>
        </li>
        <li>
            <%= link_to image_tag("/icon/map.png"), "/maps/about" %>
            <%= link_to( "ペットマップとは", "/maps/about") %>
        </li>
    </div>
    <div class="main_users_new">
        <div class="users_top">
            <h1 class="users_title">パスワードの再設定</h1>
            <p class="users_contents">メールアドレスを入力し送信してください<p>
        </div>
        <div class="users_login_item">
            <div class="container">
                <div class="form_users_form">
                    <div class="form_body">
                        <%# エラーメッセージ %>
                        <% if @error_message %>
                        <div class="form_error">
                            <%= @error_message %>
                        </div>
                        <% end %>
                        <%# ログインフォーム %>
                        <%= form_tag("/login") do %>
                        <p class="input_title">パスワード</p>                                                   <%# パスワードの入力 %>
                        <input type="password" name="password" value="<%= @password %>" class="textbox">
                        <p class="input_title">再入力</p>                                                   <%# パスワードの入力 %>
                        <input type="password" name="password" value="<%= @password %>" class="textbox">
                        <input type="submit" value="登録" class="textbutton">
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
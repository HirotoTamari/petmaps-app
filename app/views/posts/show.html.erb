<div class="main_posts">
    <%# ハンバーガーメニュー %>
    <div class="hamburger">
        <input id="hamburger_menu" type="checkbox" />
        <label for="hamburger_menu" class="open"><img class="hamburger_icon" src="/icon_svg/hamburger_icon2.svg"></label>

        <%# ハンバーガーメニューの中身 %>
        <aside>
            <div class="hamburger_nav">
                <label for="hamburger_menu" class="close"><img class="hamburger_icon" src="/icon_svg/hamburger_close_icon.svg"></label>

                <nav class="hamburger_menu">
                    <h2 class="menu_title">メニュー</h2>
                    <% if @current_user %>
                        <li>
                            <%= link_to( "マイページ", "/users/#{@current_user.id}") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップ", "/maps") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップとは", "/maps/about") %>
                        </li>
                        <li>
                            <%= link_to( "提案,意見する", "/posts/index") %>
                        </li>
                        <li>
                            <%= link_to("ログアウト", "/logout", {method: :post})%>
                        </li>
                    <% else %>
                        <li>
                            <%= link_to( "ログイン", "/login") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップ", "/maps") %>
                        </li>
                        <li>
                            <%= link_to( "ペットマップとは", "/maps/about") %>
                        </li>
                    <% end %>
                </nav>
            </div>
        </aside>
    </div>

    <%# サイドメニュー %>
    <div class="maps_menu">
        <h2 class="menu_title">メニュー</h2>
        <li>
            <%= link_to image_tag("/icon_svg/mypage.svg"), "/users/#{@current_user.id}" %>
            <%= link_to( "マイページ", "/users/#{@current_user.id}") %>
        </li>
        <li>
            <img src="/icon_svg/mypage.svg" class="logout_img">
            <%= link_to("ログアウト", "/logout", {method: :post})%>
        </li>
        <li>
            <%= link_to image_tag("/icon_svg/map.svg"), "/maps" %>
            <%= link_to( "ペットマップ", "/maps") %>
        </li>
        <li>
            <%= link_to image_tag("/icon_svg/map.svg"), "/maps/about" %>
            <%= link_to( "ペットマップとは", "/maps/about") %>
        </li>
        <li>
            <%= link_to image_tag("/icon_svg/suggestion.svg"), "/posts/index" %>
            <%= link_to( "提案,意見する", "/posts/index") %>
        </li>
    </div>
    <div class="main_posts_show">
        <div class="post_top">
            <h1 class="posts_title">提案, 意見内容</h1>
            <p class="posts_contents">あなたの提案, 意見の編集, 削除ができます<p>
        </div>
        <div class="post_container">
            <div class="posts_show_item">
                <p>
                    <%= @post.content%>         <%# 提案内容の表示 %>
                </p>
                <div class="post_time">
                    <%= @post.created_at%>      <%# 作成日時の表示 %>
                </div>
                <div class="post_menus">
                    <%= link_to("編集", "/posts/#{@post.id}/edit") %>                           <%# 編集 %>
                    <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>      <%# 削除 %>
                </div>
            </div>
        </div>
    </div>
</div>